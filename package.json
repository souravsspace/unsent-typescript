{
  "name": "@unsent/sdk",
  "version": "1.0.2",
  "description": "TypeScript SDK for the Unsent API - Send transactional emails with ease",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsup index.ts --format esm,cjs --dts",
    "publish-sdk": "pnpm run build && pnpm publish --no-git-checks --access public",
    "openapi-typegen": "openapi-typescript ../../apps/docs/api-reference/openapi.json -o types/schema.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/souravsspace/unsent-typescript.git"
  },
  "homepage": "https://unsent.dev",
  "bugs": {
    "url": "https://github.com/souravsspace/unsent-typescript/issues"
  },
  "keywords": [
    "unsent",
    "email",
    "transactional-email",
    "api",
    "sdk",
    "typescript",
    "react-email"
  ],
  "author": "sourav",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@types/react": "^19.1.2",
    "@unsent/typescript-config": "workspace:*",
    "openapi-typescript": "^7.6.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@react-email/render": "^1.0.6",
    "react": "^19.1.0"
  }
}
